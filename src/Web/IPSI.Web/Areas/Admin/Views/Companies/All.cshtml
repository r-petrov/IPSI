@model IPSI.Services.Models.ViewModels.Company.CompanyListViewModel

@{
    ViewData["Title"] = "All Insurance Companies";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-area="Admin" asp-controller="Companies" asp-action="Create">@GlobalConstants.Create</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Broker</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model.Companies)
        {
        <tr>
            <td>
                @company.Name
            </td>
            <td>
                @company.Broker
            </td>
            <td>
                <a class="btn btn-info" asp-area="Admin" asp-controller="Companies" asp-action="Details">@GlobalConstants.Details</a> |
                <a class="btn btn-warning" asp-area="Admin" asp-controller="Companies" asp-action="Edit">@GlobalConstants.Edit</a> |
                <a class="btn btn-danger" asp-area="Admin" asp-controller="Companies" asp-action="Delete">@GlobalConstants.Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
